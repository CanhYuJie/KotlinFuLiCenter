<?xml version="1.0" encoding="utf-8"?>
<com.yujie.fulicenter201607.widget.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_activity_bg"
    tools:context=".view.activity.RegisterActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/app"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="18%"
        app:layout_marginLeftPercent="35%"
        app:layout_marginTopPercent="5%"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        android:id="@+id/register_uid"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="2%"
        android:hint="请输入账号"
        android:textColorHint="#dfd9d9"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        android:id="@+id/register_pwd"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="2%"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColorHint="#dfd9d9"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/register_user_name"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="2%"
        android:hint="请输入昵称"
        android:textColorHint="#dfd9d9"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="15%"
        android:background="@drawable/login_activity_register_btn_bg"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:text="注册"
        android:id="@+id/btn_register"
        android:textSize="20dp"
        android:textColor="#fff"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="2%"
        android:background="@drawable/login_activity_register_btn_bg"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:text="返回登录"
        android:id="@+id/btn_go_login"
        android:textSize="20dp"
        android:textColor="#fff"
        />
</com.yujie.fulicenter201607.widget.PercentLinearLayout>
