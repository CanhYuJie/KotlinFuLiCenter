<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yujie.fulicenter201607.view.activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/activity_main_ViewPager_fragmentViewpager"
        app:layout_heightPercent="90%"
        >

    </android.support.v4.view.ViewPager>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        android:layout_alignParentBottom="true"
        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="70%"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/activity_main_RadioGroup_group"
            >
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="新品"
                android:gravity="center"
                android:id="@+id/activity_main_RadioButton_new_good"
                android:checked="true"
                android:drawableTop="@drawable/selector_menu_item_new_good"
                />
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="精选"
                android:gravity="center"
                android:id="@+id/activity_main_RadioButton_boutique"
                android:drawableTop="@drawable/selector_menu_item_boutique"
                />
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="分类"
                android:gravity="center"
                android:id="@+id/activity_main_RadioButton_category"
                android:drawableTop="@drawable/selector_menu_item_category"
                />
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="购物车"
                android:gravity="center"
                android:id="@+id/activity_main_RadioButton_cart"
                android:drawableTop="@drawable/selector_menu_item_cart"
                />
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:id="@+id/activity_main_RadioButton_personal_center"
                android:text="我"
                android:gravity="center"
                android:drawableTop="@drawable/selector_menu_item_personal_center"
                />
        </RadioGroup>
    </android.support.percent.PercentRelativeLayout>
    <TextView
        android:layout_height="24dp"
        android:layout_width="24dp"
        android:text="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/activity_main_TextView_cart_number"
        android:background="@drawable/cart_hint"
        app:layout_marginLeftPercent="72.5%"
        app:layout_marginTopPercent="88.5%"
        />
</android.support.percent.PercentRelativeLayout>
