<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_goods_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yujie.fulicenter201607.view.activity.GoodsDetailActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/titles"
        android:background="#fa780d"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:src="@drawable/selector_back_bg"
            android:id="@+id/activity_goods_detail_ImageView_back"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="商品详情"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/activity_goods_detail_ImageView_back"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="25dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent="80%"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_share_bg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:id="@+id/activity_goods_detail_ImageView_share"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent="35%"
            android:background="@drawable/selector_add_collect_bg"
            android:layout_marginRight="15dp"
            android:button="@null"
            android:layout_centerVertical="true"
            android:id="@+id/activity_goods_detail_ImageView_collect"
            android:layout_toLeftOf="@+id/activity_goods_detail_ImageView_share"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent="80%"
            android:layout_centerVertical="true"
            android:src="@mipmap/bg_cart_selected"
            android:layout_marginRight="15dp"
            android:id="@+id/activity_goods_detail_ImageView_add_cart"
            android:layout_toLeftOf="@+id/activity_goods_detail_ImageView_collect"
            />
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@+id/activity_goods_detail_ImageView_collect"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="5"
            android:textSize="22dp"
            android:id="@+id/activity_goods_detail_TextView_cart_number"
            android:textColor="@color/black"
            />
    </android.support.percent.PercentRelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titles"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="10%"
        android:textSize="26dp"
        android:textColor="@color/black"
        android:id="@+id/activity_goods_detail_TextView_goods_english_name"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="55%"
        android:textSize="26dp"
        android:textColor="@color/black"
        app:layout_marginLeftPercent="10%"
        android:layout_below="@+id/titles"
        app:layout_marginTopPercent="14%"
        android:id="@+id/activity_goods_detail_TextView_goods_name"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="30%"
        android:layout_below="@+id/titles"
        android:layout_alignParentRight="true"
        android:textColor="#e93f15"
        android:textSize="24dp"
        app:layout_marginTopPercent="14%"
        android:id="@+id/activity_goods_detail_TextView_goods_price"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"
        android:layout_below="@+id/activity_goods_detail_YuJieLoopView_looper"
        app:layout_marginTopPercent="3%"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:id="@+id/activity_goods_detail_TextView_goods_detail"
        />

    <com.yujie.fulicenter201607.widget.YuJieLoopView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="40%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="4%"
        app:layout_marginRightPercent="5%"
        android:id="@+id/activity_goods_detail_YuJieLoopView_looper"
        android:layout_below="@id/activity_goods_detail_TextView_goods_price"
        />
</android.support.percent.PercentRelativeLayout>
