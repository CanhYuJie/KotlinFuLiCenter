<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:layout_centerVertical="true"
        app:layout_marginLeftPercent="10%"
        android:id="@+id/adapter_item_category_group_img"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美妆"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/adapter_item_category_group_img"
        android:layout_marginLeft="10dp"
        android:id="@+id/adapter_item_category_group_name"
        />
    <ImageView
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:layout_centerVertical="true"
        app:layout_marginLeftPercent="80%"
        android:src="@mipmap/expand_on"
        android:id="@+id/adapter_item_category_group_arrow"
        />
</android.support.percent.PercentRelativeLayout>