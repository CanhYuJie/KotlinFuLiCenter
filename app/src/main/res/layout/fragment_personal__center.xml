<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.MainActivity">
    <com.yujie.fulicenter201607.widget.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eae7e7"
        android:orientation="vertical">
        <!--顶部橘色部分-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:background="#f76228"
            android:layout_height="0dp"
            app:layout_heightPercent="30%"
            >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:layout_toLeftOf="@+id/msgBtn"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:id="@+id/goSet"
                    android:textSize="28dp"
                    />
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:id="@+id/msgBtn"
                    android:onClick="toChat"
                    android:background="@drawable/selector_message_bg"
                    android:layout_alignParentRight="true"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_widthPercent="22%"
                    app:layout_heightPercent="45%"
                    android:layout_marginLeft="20dp"
                    app:layout_marginTopPercent="20%"
                    android:id="@+id/userIcon"
                    android:src="@drawable/nopic"
                />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/userIcon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:id="@+id/userNick"
                    android:text="Cahn"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/userNick"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/tb_icon_home_qrcode_gray"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="35%"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/collectCount"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="22dp"
                        android:id="@+id/collectNumber"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏的宝贝"
                        android:textSize="22dp"
                        android:textColor="#fff"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="22dp"
                        android:textColor="#fff"
                        android:id="@+id/storeCount"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏的店铺"
                        android:textSize="22dp"
                        android:textColor="#fff"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="22dp"
                        android:textColor="#fff"
                        android:id="@+id/whereCount"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的足迹"
                        android:textSize="22dp"
                        android:textColor="#fff"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.percent.PercentRelativeLayout>

        <!--我的订单部分-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="9%"
            android:layout_marginTop="10dp"
            android:id="@+id/myPayCount"
            android:background="@drawable/whitle_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="23dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="查看全部已购的宝贝"
                android:layout_toLeftOf="@+id/nextIcon"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/nextIcon"
                android:src="@mipmap/ebpay_pwdpay_next_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!--付款等图标-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="13%"
            android:layout_marginTop="10dp"
            android:background="@drawable/whitle_bg"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/order_list1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/order_list2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/order_list3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/order_list4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/order_list5"/>
            </LinearLayout>
        </LinearLayout>
        <!--我的卡券包部分-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="8%"
            android:layout_marginTop="10dp"
            android:background="@drawable/whitle_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的卡券包"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ebpay_pwdpay_next_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!--生活券-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="8%"
            android:layout_marginTop="5dp"
            android:background="@drawable/whitle_bg">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/center_card_coupon1"
                android:id="@+id/lifeCard"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生活券"
                android:layout_toRightOf="@+id/lifeCard"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="22dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ebpay_pwdpay_next_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <!--网店券-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="8%"
            android:layout_marginTop="5dp"
            android:background="@drawable/whitle_bg">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/center_card_coupon2"
                android:id="@+id/storeCard"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网店卷"
                android:layout_toRightOf="@+id/storeCard"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="22dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ebpay_pwdpay_next_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <!--会员卡-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="8%"
            android:layout_marginTop="5dp"
            android:background="@drawable/whitle_bg">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/center_card_coupon3"
                android:id="@+id/vipCard"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员卡"
                android:layout_toRightOf="@+id/vipCard"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="22dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ebpay_pwdpay_next_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!--更多-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="6%"
            android:layout_marginTop="5dp"
            android:background="@drawable/whitle_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多优惠"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="23dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ebpay_pwdpay_next_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </com.yujie.fulicenter201607.widget.PercentLinearLayout>
</FrameLayout>
