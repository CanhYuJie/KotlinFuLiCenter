<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="2dp"
    android:id="@+id/adapter_item_boutique_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            app:layout_widthPercent="55%"
            android:layout_height="180dp"
            android:id="@+id/adapter_item_boutique_img"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="0dp"
            app:layout_widthPercent="45%"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="超级难看的饭盒"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/adapter_item_boutique_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$111"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:id="@+id/adapter_item_boutique_desc"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$111"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/adapter_item_boutique_name"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.v7.widget.CardView>